{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaultName": {
            "type": "string",
            "defaultValue": "backupVault",
            "metadata": {
                "description": "Name for the backup vault."
            }
        },
        "backupPolicyName": {
            "type": "string",
            "defaultValue": "vmBackupPolicy",
            "metadata": {
                "description": ""
            }
        },
        "dailyRetention": {
            "type": "int",
            "defaultValue": 7,
            "metadata": {
                "description": "Number of days to retain daily backups."
            }
        },
        "weeklyRetention": {
            "type": "int",
            "defaultValue": 4,
            "metadata": {
                "description": "Number of weeks to retain weekly backups."
            }
        },
        "monthlyRetention": {
            "type": "int",
            "defaultValue": 13,
            "metadata": {
                "description": "Number of months to retain monthly backups."
            }
        },
        "daysOfTheWeek": {
            "type": "array",
            "defaultValue": [
                "Sunday"
            ],
            "metadata": {
                "description": "Day of the week to run weekly backup(s)."
            }
        },
        "scheduleRunTimes": {
            "type": "array",
            "defaultValue": [
                "2018-01-01T22:30:00Z"
            ],
            "metadata": {
                "description": "Time of day to run backup(s)"
            }
        }
    },
    "variables": {
        "tags": "[if(contains(resourceGroup(), 'tags'), resourceGroup().tags, json('{}'))]"
    },
    "resources": [
        {
            "name": "[parameters('vaultName')]",
            "type": "Microsoft.RecoveryServices/vaults",
            "apiVersion": "2016-06-01",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tags')]",
            "properties": {},
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            }
        },
        {
            "name": "[concat(parameters('vaultName'), '/', parameters('backupPolicyName'))]",
            "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
            "apiVersion": "2016-12-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]"
            ],
            "properties": {
                "backupManagementType": "AzureIaasVM",
                "timeZone": "UTC",
                "schedulePolicy": {
                    "schedulePolicyType": "SimpleSchedulePolicy",
                    "scheduleRunDays": null,
                    "scheduleRunFrequency": "Daily",
                    "scheduleRunTimes": "[parameters('scheduleRunTimes')]"
                },
                "retentionPolicy": {
                    "retentionPolicyType": "LongTermRetentionPolicy",
                    "dailySchedule": {
                        "retentionDuration": {
                            "count": "[parameters('dailyRetention')]",
                            "durationType": "Days"
                        },
                        "retentionTimes": "[parameters('scheduleRunTimes')]"
                    },
                    "weeklySchedule": {
                        "daysOfTheWeek": "[parameters('daysOfTheWeek')]",
                        "retentionDuration": {
                            "count": "[parameters('weeklyRetention')]",
                            "durationType": "Weeks"
                        },
                        "retentionTimes": "[parameters('scheduleRunTimes')]"
                    },
                    "monthlySchedule": {
                        "retentionDuration": {
                            "count": "[parameters('monthlyRetention')]",
                            "durationType": "Months"
                        },
                        "retentionScheduleDaily": {
                            "daysOfTheMonth": [
                                {
                                    "date": 1,
                                    "isLast": false
                                }
                            ]
                        },
                        "retentionScheduleFormatType": "Daily",
                        "retentionScheduleWeekly": null,
                        "retentionTimes": "[parameters('scheduleRunTimes')]"
                    }
                }
            }
        }
    ]
}